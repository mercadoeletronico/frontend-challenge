describe('Purchase Order UI', () => {

    it('Test Header', () => {
        cy.visit('/')

        cy.get('[data-cy=cnt-header]')
        cy.get('[data-cy=order-number]').should('to.have.length', 1)
        cy.get('[data-cy=order-serial-number]').should('to.have.length', 1)
        cy.get('[data-cy=header-client-name]').should('to.have.length', 1)
        cy.get('[data-cy=header-client-group]').should('to.have.length', 1)
        cy.get('[data-cy=header-client-mail]').should('to.have.length', 1)
        cy.get('[data-cy=header-client-phone]').should('to.have.length', 1)
        cy.get('[data-cy=header-client-fax]').should('to.have.length', 1)
        cy.get('[data-cy=header-purchase-value]').should('to.have.length', 1)
        cy.get('[data-cy=header-purchase-status]').should('to.have.length', 1)
        cy.get('[data-cy=header-purchase-create]').should('to.have.length', 1)
    })

    it ('Test Components', () => {
        cy.visit('/')

        cy.get('[data-cy=client-mumber-cnpj]')
        cy.get('[data-cy=client-name]')
        cy.get('[data-cy=client-code]')

        cy.get('[data-cy=client-address]')
        cy.get('[data-cy=client-contact-name]')
        cy.get('[data-cy=client-contact-mail]')
        cy.get('[data-cy=client-contact-phone]')
        cy.get('[data-cy=client-contact-fax]')
    })

})